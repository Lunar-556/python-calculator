import math
num1 = input("enter your first number.  ")
operand = input("enter your operand. ")
num2 = input("input your second number   ")
if operand == "+":
    print( float(num1) + float(num2))
if operand == "-":
    print(float(num1) - float(num2))
if operand == "*":
    print(float(num1) * float(num2))
if operand == "/":
    print(float(num1) / float(num2))
else: print("incorrect operand")
